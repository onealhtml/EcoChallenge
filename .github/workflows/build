name: EcoChallenge Build

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v4
    
    - name: Set up MinGW
      uses: egor-tensin/setup-mingw@v2
      with:
        platform: x64
        
    - name: Compile
      run: gcc main.c -o EcoChallenge.exe
      
    - name: Upload executable
      uses: actions/upload-artifact@v3
      with:
        name: EcoChallenge
        path: EcoChallenge.exe
